{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2020",
    "module": "es2020",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./distlib",
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "types": [
      "node",
      "jest",
      "reflect-metadata"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*",
    "./e2e/src/**/*",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}